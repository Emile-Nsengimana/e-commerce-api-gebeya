{
  "swagger": "2.0",
  "info": {
    "title": "Gebeya e-commerce APIs Documentation",
    "version": "1.0.0",
    "description": "A simple APIs that enlists e-commerce items and handles purchase details."
  },
  "host": "localhost:5000",
  "basePath": "/",
  "tags": [
    {
      "name": "User",
      "description": "user APIs"
    },
    {
      "name": "Item",
      "description": "item APIs"
    },
    {
      "name": "Cart",
      "description": "cart APIs"
    }
  ],
  "schemes": ["https", "http"],
  "consumes": ["application/json", "application/xml"],
  "produces": ["application/json", "application/xml"],
  "definitions": {
    "user_signup": {
      "required": [
        "firstName",
        "lastName",
        "username",
        "email",
        "password",
        "confirmPassword"
      ],
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "gender": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "confirmPassword": {
          "type": "string"
        }
      }
    },
    "user_signin": {
      "required": ["username", "password"],
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "item": {
      "required": ["name", "status", "quantity", "price", "description"],
      "properties": {
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "quantity": {
          "type": "string"
        },
        "price": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "image": {
          "type": "file"
        }
      }
    },
    "getItems": {
      "required": ["token"],
      "properties": {
        "token": {
          "type": "string"
        }
      }
    }
  },
  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["User"],
        "description": "User signup",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "user signup",
            "require": true,
            "schema": {
              "$ref": "#/definitions/user_signup"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "successfull operation"
          },
          "409": {
            "description": "conflict"
          }
        }
      }
    },
    "/api/auth/signin": {
      "post": {
        "tags": ["User"],
        "description": "User signin",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "user signin",
            "require": true,
            "schema": {
              "$ref": "#/definitions/user_signin"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successfull operation"
          },
          "404": {
            "description": "not found"
          },
          "401": {
            "description": "unautorized"
          },
          "500": {
            "description": "server error"
          }
        }
      }
    },
    "/api/item": {
      "post": {
        "tags": ["Item"],
        "description": "Add item",
        "parameters": [
          {
            "name": "image",
            "in": "formData",
            "description": "add item",
            "require": true
          }
        ],
        "responses": {
          "201": {
            "description": "item added successful"
          }
        }
      }
    },
    "/api/item/": {
      "get": {
        "tags": ["Item"],
        "description": "Gets a detailed list of available items",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "access token",
            "require": true
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successfull operation"
          },
          "404": {
            "description": "no available item found"
          }
        }
      }
    },
    "/api/item/{itemId}": {
      "get": {
        "tags": ["Item"],
        "description": "Gets a specific item info",
        "parameters": [
          {
            "name": "itemId",
            "in": "path",
            "description": "unique item id",
            "require": true
          },
          {
            "name": "authorization",
            "in": "header",
            "description": "access token",
            "require": true
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successfull operation"
          },
          "404": {
            "description": "item not found"
          }
        }
      }
    }
  }
}
